<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="page">
      <% include components/top.inc.ejs %>
      <div class="content-wrap">
        <div>
          <form action="?" method="post">
            标题：<input type="text" name="title" /><br>
            描述：<textarea name="description"></textarea><br>
            链接：<input type="text" name="href" /><br>
            <input type="submit" value="添加"/>
          </form>
        </div>
        <table border="1" width="100%">
          <thead>
            <tr>
              <th>ID</th>
              <th>标题</th>
              <th>描述</th>
              <th>链接</th>
              <th>操作</th>
            </tr>
          </thead>
            <%for(var i=0;i<banners.length;i++){%>
          <tbody>

              <td><%=banners[i]._id%></td>
              <td><%=banners[i].title%></td>
              <td><%=banners[i].description%></td>
              <td><%=banners[i].href%></td>
              <td>
                <a href="?act=mod&id=<%=banners[i].ID%>">修改</a><br/>
                <a href="?act=del&id=<%=banners[i].ID%>" onclick="confirm('你真的要删除吗')">删除</a>
              </td>

          </tbody>
            <%}%>
        </table>
        <div>修改用的</div>
      </div>
    </div>
  </body>
</html>
